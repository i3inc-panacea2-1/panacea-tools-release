<Window x:Class="Panacea.Tools.Release.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid Name="Grid">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Rectangle.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                                    Storyboard.TargetName="Grid" 
                                    Storyboard.TargetProperty="Opacity"
                                    From="0.0" To="1.0" Duration="0:0:0.5" 
                                    AutoReverse="false" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Discovering Solution" HorizontalAlignment="Center" Margin="3" FontSize="15"/>
            <ProgressBar IsIndeterminate="True" Height="10" Margin="20,0"/>
            <TextBlock Name="status" Text="" HorizontalAlignment="Center" Margin="3" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
