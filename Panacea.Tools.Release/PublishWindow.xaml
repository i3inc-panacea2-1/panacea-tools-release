<Window
    x:Class="Panacea.Tools.Release.PublishWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="Main"
    Title="PublishWindow"
    Width="300"
    Height="auto"
    Loaded="Main_Loaded"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow">
    <Grid>
        <StackPanel>
            <TextBlock
                Name="StatusText"
                Margin="0,15,0,0"
                HorizontalAlignment="Center" />
            <ProgressBar
                Name="Progress"
                Margin="10"
                IsIndeterminate="True"
                Maximum="100"
                Minimum="0" />
            <ProgressBar
                Name="UploadProgress"
                Margin="10"
                Maximum="100"
                Minimum="0"
                Visibility="Hidden" />
        </StackPanel>
    </Grid>
</Window>
