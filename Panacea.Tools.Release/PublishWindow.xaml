<Window x:Class="Panacea.Tools.Release.PublishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PublishWindow" Height="auto" Width="300"
        SizeToContent="Height"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Name="Main" Loaded="Main_Loaded">
    <Grid>
        <StackPanel>
            <TextBlock Name="StatusText" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            <ProgressBar IsIndeterminate="True" Margin="10" Minimum="0" Maximum="100" Name="Progress"/>
            <ProgressBar Margin="10" Minimum="0" Maximum="100" Name="UploadProgress" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
